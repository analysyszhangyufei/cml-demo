<cml-buildin-page title="radio group演示" class=" cml-base cml-page">
  <c-header title="radio" class=" cml-view cml-c-header"></c-header>
    <view class="box  cml-base cml-view">
      <c-radio-group option="{{ radioGroupOption1 }}" bindgroupchange="_cmlEventProxy" data-eventgroupchange="groupChangeHandler1" class=" cml-view cml-c-radio-group">
      </c-radio-group>
    </view>
    <view class="title  cml-base cml-view">
      <text class=" cml-base cml-text">selected value: {{radioSelect1}}</text>
    </view>
    <view class="box  cml-base cml-view">
      <c-radio-group option="{{ radioGroupOption2 }}" position="right" bindgroupchange="_cmlEventProxy" data-eventgroupchange="groupChangeHandler2" class=" cml-view cml-c-radio-group">
      </c-radio-group>
    </view>
    <view class="title  cml-base cml-view">
      <text class=" cml-base cml-text">selected value: {{radioSelect2}}</text>
    </view>
    <view class="box  cml-base cml-view">
      <c-radio-group option="{{ radioGroupOption3 }}" horizontal="{{ true }}" bindgroupchange="_cmlEventProxy" data-eventgroupchange="groupChangeHandler3" class=" cml-view cml-c-radio-group">
      </c-radio-group>
    </view>
    <view class="title  cml-base cml-view">
      <text class=" cml-base cml-text">selected value: {{radioSelect3}}</text>
    </view>
</cml-buildin-page>
<view a:if="{{show}}" class="c-popup  cml-base cml-view" style="{{containerStyle}}">
  <view class="{{maskClass}}  cml-base cml-view" onTap="_cmlEventProxy" data-eventtap="closeevent" onCmlPropsEventProxy="_cmlPropsEventProxy"></view>
  
  <view class="c-popup-content  cml-base cml-view" style="{{contentStyle}}" catchTap="_cmlEventProxy" data-eventtap="contentTap">
    <slot class=" cml-base cml-slot"></slot>
  </view>
</view>